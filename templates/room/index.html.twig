{% extends 'base.html.twig' %}

{% block title %}Liste des salles{% endblock %}

{% block body %}

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                Il y a {{ rooms | length }}
                {% if rooms | length > 1 %}salles
                {% else %}salle
                {% endif %}
                actuellement.
            </h1>
            <a class="btn btn-success" href="{{ path('create_room') }}">Ajouter une salle</a>
        </div>

        {% for room in rooms %}
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <h2 class="card-title">{{ room.name }}</h2>
                    <h4 class="card-subtitle mb-2 text-muted">{{ room.capacity }} places</h4>
                    <div class="d-flex justify-content-between">
                        <div class="d-flex">
                            <a class="btn btn-warning me-2" href="{{ path('update_room', {id: room.id}) }}">
                                Modifier
                            </a>
                            <a class="btn btn-danger" href="{{ path('delete_room', {id: room.id}) }}">
                                Supprimer
                            </a>
                        </div>
                    </div>

                    <!-- Déplacer l'image en dessous des boutons -->
                    <div class="d-flex justify-content-center mt-3">
                        {% for image in room.images %}
                            <div class="img-container mb-2" style="flex: 1;">
                                <img src="{{ asset('assets/images/' ~ image.path) }}" alt="" class="img-fluid rounded shadow-sm">
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-muted">Aucune salle trouvée. Cliquez sur "Ajouter une salle" pour en ajouter une.</p>
        {% endfor %}
    </div>

{% endblock %}
